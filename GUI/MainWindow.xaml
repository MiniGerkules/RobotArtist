<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="RobotArtist" Height="450" Width="800">
    <Grid x:Name="mainGrid">
        <Grid x:Name="prepareGrid" Grid.Row="0" Grid.Column="0" Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Image x:Name="outputImage" Grid.Row="0" Grid.Column="0" Grid.RowSpan="4"/>

            <TextBlock Grid.Row="0" Grid.Column="1" Text="Погрешность задания цвета холста" 
                   VerticalAlignment="Center" Margin="10" TextAlignment="Right" FontSize="16" TextWrapping="Wrap"/>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="Кол-во итераций с малым перекрытием" 
                   VerticalAlignment="Center" Margin="10" TextAlignment="Right" FontSize="16" TextWrapping="Wrap"/>
            <TextBlock Grid.Row="2" Grid.Column="1" Text="Начальный макс. коэффициент перекрытия" 
                   VerticalAlignment="Center" Margin="10" TextAlignment="Right" FontSize="16" TextWrapping="Wrap"/>
            <TextBlock Grid.Row="3" Grid.Column="1" Text="Погрешность, при которой мазок безоговорочно принят" 
                   VerticalAlignment="Center" Margin="10" TextAlignment="Right" FontSize="16" TextWrapping="Wrap"/>

            <TextBox Grid.Row="0" Grid.Column="2" Text="2"
                   VerticalAlignment="Center" Margin="10" TextAlignment="Left" FontSize="16" TextWrapping="Wrap"/>
            <TextBox Grid.Row="1" Grid.Column="2" Text="1" 
                   VerticalAlignment="Center" Margin="10" TextAlignment="Left" FontSize="16" TextWrapping="Wrap"/>
            <TextBox Grid.Row="2" Grid.Column="2" Text="0.6" 
                   VerticalAlignment="Center" Margin="10" TextAlignment="Left" FontSize="16" TextWrapping="Wrap"/>
            <TextBox Grid.Row="3" Grid.Column="2" Text="4" 
                   VerticalAlignment="Center" Margin="10" TextAlignment="Left" FontSize="16" TextWrapping="Wrap"/>

            <Button x:Name="setSettings" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Content="Принять настройки"
                   Margin="10, 20" FontSize="16" Background="AliceBlue" Click="SetSettingsClick"/>
        </Grid>

        <Grid x:Name="drawingGrid" Grid.Row="0" Grid.Column="0" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Image x:Name="gradientsImage" Source="/filler.jpg" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="10, 10"/>
            <Label Grid.Row="1" Grid.Column="0" Content="Кол-во градиентов" 
                   VerticalAlignment="Center" FontSize="16" HorizontalContentAlignment="Right"/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="0" 
                     VerticalAlignment="Center" FontSize="16" HorizontalContentAlignment="Left"/>

            <Image x:Name="strokesImage" Source="/filler.jpg" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" Margin="10, 10"/>
            <Label Grid.Row="1" Grid.Column="2" Content="Кол-во мазков" 
                   VerticalAlignment="Center" FontSize="16" HorizontalContentAlignment="Right"/>
            <TextBox Grid.Row="1" Grid.Column="3" Text="0" 
                     VerticalAlignment="Center" FontSize="16" HorizontalContentAlignment="Left"/>
        </Grid>
    </Grid>
</Window>
