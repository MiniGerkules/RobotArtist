<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="RobotArtist" Height="450" Width="800">
    <Grid x:Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="26"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" Background="LightBlue" FontSize="16">
            <MenuItem Header="Файл">
                <MenuItem x:Name="openButton" Header="Открыть" Command="Open"/>
                <MenuItem Header="Сохранить"/>
                <MenuItem Header="Сохранить как"/>
                <MenuItem Header="Закрыть"/>
                <MenuItem Header="Выход"/>
            </MenuItem>
            <MenuItem x:Name="viewButton" Header="Просмотр" Click="ViewClick"/>
            <MenuItem x:Name="settingsButton" Header="Настройки" Click="SettingsClick"/>
        </Menu>

        <Grid x:Name="viewGrid" Visibility="Collapsed" Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <StackPanel x:Name="openedFiles" Grid.Row="0" Grid.Column="0" Orientation="Horizontal"/>

            <Image x:Name="outputImage" Grid.Row="2" Grid.Column="0" Margin="5, 5">
                <Image.LayoutTransform>
                    <ScaleTransform ScaleX="1" ScaleY="-1"/>
                </Image.LayoutTransform>
            
                <Image.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Повернуть на 90 градусов" Click="RotateImage"/>
                        <MenuItem Header="Полностью перестроить" Click="RepaintImage"/>
                    </ContextMenu>
                </Image.ContextMenu>
            </Image>
        </Grid>

        <Grid x:Name="settingsGrid" Visibility="Visible" Grid.Row="1" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image x:Name="previewImage" Grid.Row="0" Grid.Column="0" Margin="5, 5">
                <Image.LayoutTransform>
                    <ScaleTransform ScaleX="1" ScaleY="-1"/>
                </Image.LayoutTransform>
            </Image>

            <Grid x:Name="settingsFields" Grid.Row="0" Grid.Column="1"/>
        </Grid>
    </Grid>
</Window>
