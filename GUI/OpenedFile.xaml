<UserControl x:Class="GUI.OpenedFile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI"
             mc:Ignorable="d"
             MaxHeight="50" MaxWidth="250"
             MinHeight="30" MinWidth="150">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition MinWidth="40" MaxWidth="40" Width="*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="choose" Grid.Row="0" Grid.Column="0" Margin="0 0 1.25 0" Click="Choose_Click"/>
        <Button x:Name="close" Grid.Row="0" Grid.Column="1" Margin="1.25 0 0 0" Click="Close_Click">
            <Image Source="/forClose.png" Stretch="Fill"/>
        </Button>
    </Grid>
</UserControl>
